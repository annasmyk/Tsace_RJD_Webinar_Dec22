\end{frame}
}

% Highlight a single word
\newcommand{\highlight}[1]{{\it{\color{alerted text.fg}{#1}}}}
\newcommand{\highlightbf}[1]{{\textbf{\color{alerted text.fg}{#1}}}}

\newcommand{\highlightslide}[2]{{\it{\color<#1>{alerted text.fg}{#2}}}}
\newcommand{\highlightbfslide}[2]{{\textbf<#1>{\color<#1>{alerted text.fg}{#2}}}}

